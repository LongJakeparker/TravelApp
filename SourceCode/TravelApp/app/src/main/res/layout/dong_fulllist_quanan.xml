<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageViewFull"
                android:layout_width="@dimen/width_image_top_checkin"
                android:layout_height="@dimen/heigh_image_top_checkin" />
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_text_top_checkin"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/imageViewFull"
                android:layout_alignBottom="@+id/imageViewFull"
                android:layout_alignTop="@+id/imageViewFull"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/text_quanan"
                    android:textStyle="bold"
                    android:id="@+id/textViewTenNhaHangFull"
                    android:text="Tên nhà hàng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textViewLuotDanhGiaFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lượt đánh giá"/>
                <TextView
                    android:maxLines="1"
                    android:id="@+id/textViewMotaFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="18dp"
                            android:id="@+id/textViewLuotCheckinFull"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lượt check in"/>
                        <ImageView
                            android:src="@drawable/map_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="18dp"
                            android:id="@+id/textViewLikeFull"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lượt check in"/>
                        <ImageView
                            android:src="@drawable/heart_red"
                            android:layout_width="16dp"
                            android:layout_height="16dp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>