<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/nen_login"
    tools:context="com.greenacademy.travelapp.Activity.LoginActivity.ActivityLogin">

    <ImageView
        style="@style/logo"
        android:src="@drawable/icon_login"
        android:textColor="@color/colorEdittextLogin"
        android:layout_alignParentTop="true"
        android:id="@+id/imageViewLogoLogin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_weight="1"
            android:text="Google +"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="#f14602"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.facebook.login.widget.LoginButton
            android:layout_weight="1"
            android:id="@+id/buttonLoginFacebook"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayouteditText"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:background="@drawable/custom_edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:hint="Email"
                    android:paddingLeft="@dimen/edittext_login_paddingleft"
                    android:layout_below="@+id/imageViewLogoLogin"
                    android:id="@+id/editTextEmailLogin" />

                <ImageView
                    android:src="@drawable/user"
                    android:layout_width="@dimen/size_image_login"
                    android:layout_height="@dimen/size_image_login"
                    android:id="@+id/imageView" />
            </FrameLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/color_Login"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:background="@drawable/custom_edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:paddingLeft="@dimen/edittext_login_paddingleft"
                    android:id="@+id/editTextPasswordLogin"
                    android:inputType="textPassword" />
                <ImageView
                    android:src="@drawable/password"
                    android:layout_width="@dimen/size_image_login"
                    android:layout_height="@dimen/size_image_login" />
            </FrameLayout>

        </LinearLayout>

        <Button
            android:background="#00ffffff"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/margin_quenmatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:layout_gravity="right"/>
    </LinearLayout>

    <Button
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/custom_button_login"
        android:id="@+id/buttonLogin"
        android:layout_weight="1"
        android:layout_width="@dimen/width_button_dangnhap"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayouteditText"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
