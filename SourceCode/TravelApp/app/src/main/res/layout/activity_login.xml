<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/nen_login"
    tools:context="com.greenacademy.travelapp.Activity.LoginActivity.ActivityLogin">

    <TextView
        android:text="LOG IN"
        android:textColor="@color/colorEdittextLogin"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textViewTextLogin" />

    <LinearLayout
        android:id="@+id/linearLayouteditText"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <FrameLayout
            android:layout_marginLeft="@dimen/margin_edittext"
            android:layout_marginRight="@dimen/margin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:background="@drawable/custom_edittext_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Email"
                android:paddingLeft="@dimen/edittext_login_paddingleft"
                android:layout_below="@+id/textViewTextLogin"
                android:id="@+id/editTextEmailLogin" />

            <ImageView
                android:padding="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user"/>
        </FrameLayout>

        <FrameLayout
            android:layout_marginLeft="@dimen/margin_edittext"
            android:layout_marginRight="@dimen/margin_edittext"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:background="@drawable/custom_edittext_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:paddingLeft="@dimen/edittext_login_paddingleft"
                android:id="@+id/editTextPasswordLogin"
                android:layout_below="@+id/editText"
                android:inputType="textPassword" />
            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/password"/>
        </FrameLayout>


        <TextView
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/margin_quenmatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:layout_gravity="right"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@id/linearLayouteditText"
        android:text="Log in"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@drawable/custom_button_login"
        android:id="@+id/buttonLogin"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_below="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.common.SignInButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnSigninGoogle"
            android:layout_weight="1"/>

        <com.facebook.login.widget.LoginButton
            android:layout_weight="1"
            android:layout_marginTop="@dimen/edittext_login_paddingleft"
            android:id="@+id/buttonLoginFacebook"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>
</RelativeLayout>
