<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mo_ta_map"
        android:id="@+id/map_fragment_scroll"
        android:layout_above="@+id/tv_like_map">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Chỗ này có cái gì đó"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mo_ta_2_map"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:text="Quán abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_ten_dia_diem_map"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_margin="10dp"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_ten_dia_diem_map"
        android:layout_centerHorizontal="true"
        android:id="@+id/map_dialog_hinh_anh"
        android:layout_margin="10dp" />

    <TextView
        android:text="Mô tả"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mo_ta_map"
        android:textAlignment="center"
        android:layout_below="@+id/map_dialog_hinh_anh"
        android:layout_centerHorizontal="true"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_margin="10dp" />

    <TextView
        android:text="Like: 2400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_like_map"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/tv_danh_gia_map"
        android:layout_alignBottom="@+id/tv_danh_gia_map"
        android:layout_toRightOf="@+id/tv_danh_gia_map"
        android:layout_toEndOf="@+id/tv_danh_gia_map"
        android:layout_margin="5dp"
        android:textSize="12sp" />

    <TextView
        android:text="View: 2500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_view_map"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/tv_like_map"
        android:layout_alignBottom="@+id/tv_like_map"
        android:layout_toRightOf="@+id/tv_like_map"
        android:layout_toEndOf="@+id/tv_like_map"
        android:layout_margin="5dp"
        android:textSize="12sp" />

    <Button
        android:text="chi tiết"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chi_tiet_btn_map"
        android:background="@drawable/button_map_fragment"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

    <TextView
        android:text="Đánh giá: 7.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_danh_gia_map"
        android:textColor="@color/colorPrimary"
        android:layout_above="@+id/chi_tiet_btn_map"
        android:layout_alignLeft="@+id/map_dialog_hinh_anh"
        android:layout_alignStart="@+id/map_dialog_hinh_anh"
        android:layout_margin="5dp"
        android:textSize="12sp" />

</RelativeLayout>