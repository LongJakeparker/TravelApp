<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_header_schedule"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="5dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleHeaderSchedule"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/text_size_header_list"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCountChildSchedule"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/text_size_header_list"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_location"
            android:id="@+id/ivCountChildSchedule"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvCountChildSchedule"
            android:layout_toStartOf="@+id/tvCountChildSchedule"
            android:layout_marginRight="3dp"/>
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSumPicSchedule"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_header_list"
            android:layout_marginRight="6dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_toLeftOf="@+id/ivCountChildSchedule" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_camera_white"
            android:id="@+id/ivSumPicSchedule"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvSumPicSchedule"
            android:layout_toStartOf="@+id/tvSumPicSchedule"
            android:layout_marginRight="3dp"/>
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSumLikeSchedule"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_header_list"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_toLeftOf="@+id/ivSumPicSchedule" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_thump_up"
            android:id="@+id/ivSumLikeSchedule"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvSumLikeSchedule"
            android:layout_toStartOf="@+id/tvSumLikeSchedule"
            android:layout_marginRight="3dp"/>
    </RelativeLayout>

</RelativeLayout>