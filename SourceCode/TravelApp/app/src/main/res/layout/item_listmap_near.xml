<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_ivitem_list_map"
            android:id="@+id/ivItemListMapNear"
            android:layout_weight="1.7"
            android:layout_margin="@dimen/layout_margin_item_list_map"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/layout_margin_item_list_map">
            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvNameItemListMapNear"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_title_list_map"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvAddressItemListMapNear"
                android:layout_weight="1"
                android:lines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tvRateItemListMapNear"
            android:layout_weight="1.7"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginRight="@dimen/layout_marginright_ivsearchbar"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/star" />
    </LinearLayout>
</LinearLayout>