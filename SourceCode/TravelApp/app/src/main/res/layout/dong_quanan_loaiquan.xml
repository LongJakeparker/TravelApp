<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_dong_loaiquan"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_cardview_quanan"
        android:elevation="@dimen/elevation_cardview_quanan">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageViewHinhLoaiQuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/textViewTenLoaiQuan"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="@dimen/margin_text_dong_loaiquan"
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSoLuongLoaiQuan"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:layout_marginTop="@dimen/margin_text_dong_loaiquan"
                android:textSize="10dp"
                android:layout_marginLeft="@dimen/margin_text_dong_loaiquan"
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTenLoaiQuan"
                android:layout_above="@+id/textViewSoLuongLoaiQuan"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>