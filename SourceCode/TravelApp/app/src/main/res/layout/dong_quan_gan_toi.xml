<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/width_dong_quna_gan_toi"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_cardview_quanan">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/elevation_cardview_quanan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageViewQuanGanToi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/textViewTenQGT"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="@dimen/margin_text_dong_loaiquan"
                android:text="Đánh giá"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLuotDanhGiaQGT"
                android:layout_above="@+id/textViewMotaQGT"/>

            <TextView
                android:layout_marginLeft="@dimen/margin_text_dong_loaiquan"
                android:id="@+id/textViewMotaQGT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textSize="10dp"
                android:layout_alignParentBottom="true"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu thích"
                android:textSize="10dp"
                android:layout_marginRight="@dimen/margin_text_dong_loaiquan"
                android:layout_alignTop="@+id/textViewLuotDanhGiaQGT"
                android:layout_alignBottom="@+id/textViewLuotDanhGiaQGT"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/textViewYeuThichQGT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Yêu thích"
                    android:textSize="10dp" />
                <ImageView
                    android:src="@drawable/heart_red"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </FrameLayout>


            <TextView
                android:textColor="@color/text_quanan"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Tên quán"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTenQGT"
                android:layout_above="@+id/textViewLuotDanhGiaQGT"
                android:layout_alignLeft="@+id/textViewLuotDanhGiaQGT"
                android:layout_alignStart="@+id/textViewLuotDanhGiaQGT" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>