<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chitiet_diadiem_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.greenacademy.travelapp.Activity.Fragment.ChiTietDiaDiemFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_ChiTietDiaDiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />


            <TextView
                android:id="@+id/tvTenDiaDiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="25dp"
                android:layout_alignBottom="@+id/image_ChiTietDiaDiem"
                android:background="@drawable/background_title_khuvuc"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite" />

            <LinearLayout
                android:id="@+id/linearReview"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/image_ChiTietDiaDiem"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvLike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="123k"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvLike"
                        android:gravity="center"
                        android:text="Yêu thích" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="542k"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvView"
                        android:gravity="center"
                        android:text="Lượt xem" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="9.8"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvReview"
                        android:gravity="center"
                        android:text="Đánh giá" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearReview"
                android:orientation="vertical">

                <TextView
                    android:padding="10dp"
                    android:id="@+id/tvMoTaDiaDiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:text="11111111111111111111111" />

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:weightSum="3"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvDiaChi"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="địa chỉ"
                        android:textColor="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:background="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tvCheckIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="542k"
                            android:textColor="@color/colorWhite"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvCheckIn"
                            android:textColor="@color/colorWhite"
                            android:layout_centerHorizontal="true"
                            android:text="Check in" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include
            android:id="@+id/checkin"
            layout="@layout/chitietdiadiem_item_camera" />

        <include
            android:id="@+id/chiase"
            layout="@layout/chitietdiadiem_item_binhluan" />

        <include
            android:id="@+id/danhgia"
            layout="@layout/chitietdiadiem_item_danhgia" />

        <include
            android:id="@+id/yeuthich"
            layout="@layout/chitietdiadiem_item_yeuthich" />

        <include
            android:id="@+id/danhdau"
            layout="@layout/chitietdiadiem_item_danhdau" />
    </LinearLayout>


</FrameLayout>
