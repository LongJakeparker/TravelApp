<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tvNameDesTrip"
        android:text="tên"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"/>

    <TextView
        android:layout_below="@+id/tvNameDesTrip"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tvTitleDesTrip"
        android:text="@string/title_descrip_trip"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"/>

    <EditText
        android:layout_below="@id/tvTitleDesTrip"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/etDescripTrip"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:background="@color/colorWhite"
        android:gravity="top"/>

    <Button
        android:text="Hủy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescripTrip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnCancelTrip"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/text_size_header_list"
        android:textStyle="bold"/>

    <Button
        android:text="Thêm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescripTrip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnAddTrip"
        android:textAllCaps="false"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/text_size_header_list"
        android:textStyle="bold"/>
</RelativeLayout>