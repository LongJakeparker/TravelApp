<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/framelayoutImageUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp">
        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/profileUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.facebook.login.widget.ProfilePictureView>
        <ImageView
            android:id="@+id/imageViewAvatarUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_below="@+id/framelayoutImageUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewNameUser"
            android:textColor="#282828"
            android:text="Nguyễn Giang Vĩ Sơn"
            android:textSize="32dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/textViewEmailUser"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="gnvisons@gmail.com"/>
            <ImageView
                android:src="@drawable/ic_email"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLogout"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Log out"/>
            <ImageView
                android:src="@drawable/ic_logout"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>