        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <service android:name=".Services.PlayMusicService" android:enabled="true" android:exported="true" />
    <service android:name=".Services.TinhGiaiThuaService" android:enabled="true" android:exported="true" />
