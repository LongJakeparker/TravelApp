    <meta-data android:name="com.google.android.maps.v2.API_KEY" android:value="AIzaSyCs4tEU67BDgMNDy8lNt7uQiUw-93RXiNQ" />

    <service android:name=".Fcm.FirebaseInstanceService">
        <intent-filter>
            <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
        </intent-filter>
